{
  "name": "github-issues-irc-bot",
  "version": "0.0.1",
  "description": "A simple IRC bot that replies with a link to the github issue when an issue number is mentioned",
  "main": "issuesbot",
  "scripts": {
    "lint": "eslint main.js issuesbot.js eventbot.js quipsbot.js storage.js test/",
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/irc-issues-bot.git"
  },
  "dependencies": {
    "deasync": "^0.1.4",
    "github": "9.1.0",
    "greatest-common-divisor": "^1.0.0",
    "ical": "^0.5.0",
    "irc": "0.5.2",
    "irc-colors": "*",
    "node-localstorage": "*",
    "random-item": "^1.0.0",
    "redis": "^2.4.2"
  },
  "keywords": [
    "irc",
    "github",
    "bot",
    "issues"
  ],
  "author": "Martin Giger",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/freaktechnik/irc-issues-bot/issues"
  },
  "private": true,
  "devDependencies": {
    "ava": "^0.18.0",
    "codecov": "^1.0.1",
    "eslint": "^3.17.0",
    "eslint-plugin-freaktechnik": "^2.0.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7"
  }
}
