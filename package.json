{
  "name": "github-issues-irc-bot",
  "version": "0.0.1",
  "description": "A simple IRC bot that replies with a link to the github issue when an issue number is mentioned",
  "main": "issuesbot",
  "scripts": {
    "lint": "eslint main.js issuesbot.js eventbot.js quipsbot.js storage.js test/ --ext js,json",
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "start": "node main.js"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/irc-issues-bot.git"
  },
  "dependencies": {
    "@octokit/rest": "^15.12.1",
    "deasync": "^0.1.13",
    "greatest-common-divisor": "^1.0.0",
    "ical": "^0.5.0",
    "irc": "^0.5.2",
    "irc-colors": "^1.4.3",
    "node-localstorage": "^1.3.1",
    "random-item": "^1.0.0",
    "redis": "^2.8.0"
  },
  "keywords": [
    "irc",
    "github",
    "bot",
    "issues"
  ],
  "author": "Martin Giger",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/freaktechnik/irc-issues-bot/issues"
  },
  "private": true,
  "devDependencies": {
    "@freaktechnik/eslint-config-node": "^6.5.0",
    "@freaktechnik/eslint-config-test": "^6.5.1",
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "eslint": "^5.6.0",
    "nyc": "^13.0.1",
    "sinon": "^6.3.4"
  }
}
